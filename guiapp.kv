<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        Label:
            id: label1
            font_size: sp(45)
            text: "Gesture Recognition System"
            size_hint_y: 0.1
        BoxLayout:
            Button:
                text: 'Start'
                font_size: sp(68)
                on_release:
                    root.manager.current = 'exec'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'Setting'
                font_size: sp(68)
                on_release:
                    root.manager.current = 'setting'
                    root.manager.transition.direction = 'left'


<SettingScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Button:
            text: 'back'
            font_size: sp(25)
            on_release:
                root.manager.current = 'main'
                root.manager.transition.direction = 'right'

        Button:
            text: '赤外線登録'
            font_size: sp(68)
            on_release: 
                root.manager.current = 'irregister'
                root.manager.transition.direction = 'left'
        Button:
            text: 'ジェスチャ登録'
            font_size: sp(68)
            on_release:
                root.manager.current = 'gesregister'
                root.manager.transition.direction = 'left'
        Button:
            text: '環境設定'
            font_size: sp(68)
            on_release:
                root.manager.current = 'envsetting'
                root.manager.transition.direction = 'left'

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

